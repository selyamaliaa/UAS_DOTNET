@model IEnumerable<Siswa>

@{ 
    Layout = "_LayoutBaru";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Dark Table</h5>

                <!-- Dark Table -->
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th>NIS</th>
                            <th>NISN</th>
                            <th>Nama</th>
                            <th>Jenis Kelamin</th>
                            <th>Alamat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NIS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NISN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nama)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Jenis_Kelamin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Alamat)
                            </td>
                            <td>
                                <a asp-action="Ubah" asp-route-id="@item.NIS"><i class="mdi mdi-pencil menu-icon icon-md text-success" style="color:dodgerblue"></i></a>
                                <a asp-action="Hapus" asp-route-id="@item.NIS" title="Keluar" style="color:red"
                                   onclick="if (!confirm('Yakin Akan Menghapus Data Ini ? ')) { return false;}"><i class="mdi mdi-delete menu-icon icon-md text-success" style="color:blue"></i></a>
                            </td>
                        </tr>
                        }
                        </tbody>
                </table>
                <!-- End Dark Table -->

            </div>
        </div>
    </div>
</div>